class Solution {
public:

    int fn(int ind, vector<int> &dp)
    {
        if(dp[ind] != -1)
        {
            return dp[ind];
        }
        if(ind == 1 || ind == 0)
        {
            return 1;
        }

        int left = fn(ind-1, dp);
        int right = fn(ind-2, dp);

        return dp[ind] = left + right;
    }

    int climbStairs(int n) {
        vector<int> dp(n+1, -1);

        return fn(n,dp);
    }
};
